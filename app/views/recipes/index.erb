<%= flash[:message] unless flash[:message] = nil %>
<section>

  <% if current_user.recipes.empty? %>
  <h2>It looks like you don't have any recipes yet! <a href="/recipes/new">Click here</a> to change that.</h2>

  <% else %>
  <h2>Hi <%= current_user.name %>, here are all your recipes</h2>

  <table class="recipe-index">
    <% current_user.recipes.each do |recipe| %>

    <tr>
      <td><a href="/recipes/<%= recipe.slug %>"><%= recipe.name %></a></td>
      <td><%= recipe.cooktime %></td>
      <td><a href="/recipes/add/<%= recipe.id %>">Add to current week</a></td>
    </tr>

    <% end %>
  </table>
  <% end %>
</section>
